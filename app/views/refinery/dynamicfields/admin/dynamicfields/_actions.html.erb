<ul>
  <% if ::Refinery::Dynamicfields::Admin::DynamicfieldsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.dynamicfields_admin_dynamicfields_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_dynamicfields_admin_dynamicfield_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Dynamicfields::Admin::DynamicfieldsController.sortable? && ::Refinery::Dynamicfields::Dynamicfield.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Dynamicfields"),
                 refinery.dynamicfields_admin_dynamicfields_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Dynamicfields"),
                 refinery.dynamicfields_admin_dynamicfields_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
